{
    // Use IntelliSense to learn about possible attributes.
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/commaris",
            "args": [
                "-g"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build", // Ensure this matches the label of a build task in tasks.json
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}